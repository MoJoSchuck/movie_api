# Copy to .env and fill values
# MongoDB connection string
CONNECTION_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# JWT secret used for signing and verifying tokens
JWT_SECRET=change_me_to_a_long_random_value

# Optional comma-separated list of allowed CORS origins
# e.g. https://myflix777.netlify.app,https://your-frontend.example
ALLOWED_ORIGINS=

# Port the server listens on (host must be 0.0.0.0 on most hosts)
PORT=8080
NODE_ENV=production
